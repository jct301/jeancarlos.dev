{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "paths": {
      "@*": [
        "src/*"
      ]
    },
    "strictNullChecks": true
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "extends": "astro/tsconfigs/strict",
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.astro"
  ]
}